extends ../layout
block content
  h1.inline Your Profile
  - if (user.id === currentUser.id || currentUser.permission === 'admin')
      a(href= "/users/" + user.id + "/edit", class="option-btn") Edit
  br
  img(src="http://placehold.it/100x100", class="profile_img")
  p Email:
    = ' ' + user.local.email
  p Username:
  .img_row
    h3 Favorite Gifts
    -for(i=0;i < 5 && i < favorites.length; i++)
        a
          img(src=favorites[favorites.length - 1 - i].imageUrl)
  .img_row
    h3 Gifts You've Rated
    - var n = 0
      while n < 5
        a
          img(src="http://placehold.it/150x150")
          - n++
  .img_row
    h3 Recently Viewed
    - var n = 0
      while n < 5
        a
          img(src="http://placehold.it/150x150")
          - n++
